{
  "name": "@simple/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "nx": "nx",
    "build": "nx run-many -t build",
    "jest": "jest",
    "flyway": "flyway -c .flyway.js",
    "openapi:generate": "openapi-generator-cli generate",
    "__________start__________": "__________start__________",
    "start:api:dev": "nx run api:serve:development",
    "start:api:prod": "nx run api:serve:production",
    "__________test__________": "__________test__________",
    "test": "nx run-many -t test",
    "test:e2e": "nx run api:e2e",
    "__________lint__________": "__________lint__________",
    "lint": "npm run nx -- run-many --t lint",
    "lint:fix": "nx run-many --t lint --fix && npm run tsc:lint && nx format:write --all ",
    "tsc:lint": "tsc --noEmit -p tsconfig.base.json",
    "__________database__________": "__________database__________",
    "migration:run": "npm run flyway -- migrate",
    "migration:run:local": "set -a && . ./devops/.env && set +a && migration:run",
    "db:pull": "set -a && . ./devops/.env && set +a && npx -y typeorm-model-generator --host $PSQL_HOST --database $PSQL_DATABASE_USER --user $PSQL_USERNAME --pass $PSQL_PASSWORD --port $PSQL_PORT --engine postgres --schema public --output ./libs/typeorm/entities/src/lib/generated-entities",
    "__________typegen__________": "__________typegen__________",
    "contract:rest:generate": "npm run nx -- run-many --t contract:generate",
    "__________hooks__________": "__________hooks__________",
    "prepare": "husky install"
  },
  "private": true,
  "devDependencies": {
    "@argotools/schematics": "^0.0.1",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@faker-js/faker": "^8.4.1",
    "@jscutlery/semver": "^5.2.2",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^10.0.2",
    "@nx/eslint-plugin": "16.8.1",
    "@nx/jest": "16.8.1",
    "@nx/js": "16.8.1",
    "@nx/linter": "16.8.1",
    "@nx/nest": "^16.8.1",
    "@nx/node": "16.8.1",
    "@nx/webpack": "16.8.1",
    "@nx/workspace": "16.8.1",
    "@openapitools/openapi-generator-cli": "^2.13.4",
    "@types/jest": "^29.4.0",
    "@types/node": "~18.7.1",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "eslint": "~8.46.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "husky": "^8.0.0",
    "jest": "^29.4.1",
    "jest-environment-node": "^29.4.1",
    "jest-junit": "^16.0.0",
    "lint-staged": "^14.0.1",
    "nx": "16.8.1",
    "prettier": "^2.6.2",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "typescript": "~5.1.3"
  },
  "dependencies": {
    "@argotools/redis-client": "^0.0.2",
    "@nestjs/common": "^10.0.2",
    "@nestjs/core": "^10.0.2",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/platform-express": "^10.0.2",
    "@nestjs/swagger": "^7.4.0",
    "@nestjs/typeorm": "^10.0.2",
    "axios": "^1.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "connection-string": "^4.4.0",
    "cookie-parser": "^1.4.6",
    "env-var": "^7.5.0",
    "nestjs-pino": "^4.1.0",
    "node-flywaydb": "^3.0.7",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "tslib": "^2.3.0",
    "typeorm": "^0.3.20"
  },
  "lint-staged": {
    "*.{js,ts}": "npm run lint:fix"
  }
}
